@model Registration.Models.UserViewModel

@{
    ViewData["Title"] = "Register User";
}

<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("Register", "Register", FormMethod.Post))
{
    @Html.LabelFor(model=>model.Username,"Email")
    @Html.EditorFor(model => model.Username, new { @class = "form-control" })
    @Html.LabelFor(model=>model.Password,"Password")
    @Html.PasswordFor(model => model.Password)
    <input type="submit" value="Register"/>
}
